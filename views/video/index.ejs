        <div class="main_content">
            <div class="container">
                <%for(video of videos){ %>
                   <a id="home_watch-tag" href="/youtube/watch/<%= video.id %>">
                     <div class="home-yt-video-container">
                        <div class="home-yt-imageThumbnail">
                            <img src="<%= video.snippet.thumbnails.standard.url %>" alt="thumbnail">
                            <div class="home-yt-progressBar"></div>
                            <div class="home-yt-captn-val-time">
                                <div class="home-yt-val-cap-box">
                                   <div class="home-yt-val"><i class="fa-solid fa-volume-high"></i></div>
                                   <div class="home-yt-cap"><i class="fa-regular fa-closed-captioning"></i></div>
                                </div>
                                <div class="home-yt-time-box">
                                    <p class="home_video_time" > <%= video.contentDetails.duration %> </p>
                                </div> 
                            </div>

                        </div>

                        <div class="home-yt-desction-title">
                            <div class="home-yt-channel-box">
                                <img src="<%= video.channelImage %>" alt="Channel Image">
                            </div>
                            <div class="home-yt-decription-box">
                                <p class="home-video-description"><%= video.snippet.title %></p>
                                <p class="home-channel-nm" id="home-channel-nm"><%=video.snippet.channelTitle %></p>
                                <p class="home-video-views"> <span id="home_video_views"><%= video.statistics.viewCount %></span>  <span class="home-video_updation"><%=video.snippet.publishedAt %></span> </p>
                            </div>
                            <div class="home-yt-pl-sh-dot"><i class="fa-solid fa-ellipsis-vertical"></i></div>
                        </div> <!-- Description Box End-->
